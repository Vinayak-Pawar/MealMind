# Application Configuration
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
APP_NAME=MealMind
APP_VERSION=2.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./mealmind.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/mealmind

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# External API Keys
GOOGLE_FLOW_API_KEY=your-google-flow-api-key
NANO_BANANA_API_KEY=your-nano-banana-api-key
NUTRITIONIX_APP_ID=your-nutritionix-app-id
NUTRITIONIX_APP_KEY=your-nutritionix-api-key
SPOONACULAR_API_KEY=your-spoonacular-api-key

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mealmind.log

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
